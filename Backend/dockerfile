# Use Python 3.11 slim as base
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PATH="/opt/venv/bin:$PATH" \
    FLASK_ENV=production \
    FLASK_APP=app.py

# Install only necessary system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Create and activate virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Create requirements.txt with exact versions
RUN echo "flask==2.3.3\n\
flask-cors==4.0.0\n\
pymongo==4.5.0\n\
werkzeug==3.0.1\n\
python-dotenv==1.0.0\n\
marshmallow==3.20.1\n\
requests==2.31.0\n\
gunicorn==21.2.0" > requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Create non-root user
RUN groupadd -r appuser && useradd -r -g appuser -s /sbin/nologin appuser

# Create start script
RUN echo '#!/bin/sh\n\
exec gunicorn \
    --workers=4 \
    --threads=2 \
    --bind=0.0.0.0:5001 \
    --timeout=120 \
    --access-logfile=- \
    --error-logfile=- \
    --log-level=info \
    --worker-class=gthread \
    --max-requests=10000 \
    --max-requests-jitter=1000 \
    "app:app"' > /app/start.sh && \
    chmod +x /app/start.sh

# Set permissions
RUN chown -R appuser:appuser /opt/venv && \
    chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Copy application code
COPY --chown=appuser:appuser . .

# Create necessary directories with correct permissions
RUN mkdir -p /app/logs && \
    chown -R appuser:appuser /app/logs

# Expose port
EXPOSE 5001

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5001/health || exit 1

ENV GUNICORN_WORKERS=4 \
    GUNICORN_TIMEOUT=120

# Update the CMD
CMD ["sh", "-c", "gunicorn --workers=${GUNICORN_WORKERS} --bind=0.0.0.0:5001 --timeout=${GUNICORN_TIMEOUT} --access-logfile=- --error-logfile=- --log-level=info app:app"]